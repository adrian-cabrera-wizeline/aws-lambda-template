{
  "name": "cloud-backend-monorepo",
  "version": "1.0.0",
  "scripts": {
    "build": "node esbuild.config.js",
    "test": "jest",
    "// --- DOCKER WORKFLOW ---": "",
    "db:start": "docker-compose -f infra-local/docker-compose.yml up -d",
    "db:stop": "docker-compose -f infra-local/docker-compose.yml down",
    "db:seed": "npx ts-node infra-local/seed/seed-dynamo.ts",
    "dev:env": "npm run db:start && echo '‚è≥ Waiting for DBs...' && sleep 10 && npm run db:seed",
    "// --- LOCAL INVOKE ---": "",
    "invoke:price": "npm run build && cd infra-local && sam local invoke -t local-debug.yaml -e events/price-event.json PriceFetcherLocal",
    "invoke:config": "npm run build && cd infra-local && sam local invoke -t local-debug.yaml -e events/config-event.json ConfigServiceLocal"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.12.0",
    "@aws-lambda-powertools/metrics": "^1.12.0",
    "@aws-lambda-powertools/tracer": "^1.12.0",
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/lib-dynamodb": "^3.400.0",
    "@middy/core": "^4.6.0",
    "@middy/http-header-normalizer": "^4.6.0",
    "@middy/http-json-body-parser": "^4.6.0",
    "oracledb": "^6.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "esbuild": "^0.27.2",
    "glob": "^10.3.3",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
