{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/config-service",
    "baseUrl": ".",
  
    "target": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "../../common/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}